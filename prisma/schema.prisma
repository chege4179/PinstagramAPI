// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId          String   @id
  username        String
  fullName        String
  email           String   @unique
  bio             String?
  followerIds     String[]
  followingIds    String[]
  password        String
  createdAt       String
  createdOn       String
  profileImageUrl String
  posts           Post[]

  Comment Comment[]
}

model PostMediaItem {
  postMediaId   String  @id
  postMediaType String
  postMediaURL  String
  Post          Post?   @relation(fields: [postPostId], references: [postId])
  postPostId    String?
}

model Post {
  user         User            @relation(fields: [postUserId], references: [userId])
  postUserId   String
  postId       String          @id
  postCaption  String
  postContent  PostMediaItem[]
  postViews    String[]
  postLikes    String[]
  postComments Comment[]
  createdAt    String
  createdOn    String
}

model Comment {
  commentId      String   @id
  commentUserId  String
  commentLikes   String[]
  commentContent String
  commentPostId  String
  post           Post     @relation(fields: [commentPostId], references: [postId])
  commentPoster  User     @relation(fields: [commentUserId], references: [userId])
}
