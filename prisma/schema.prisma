// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId          String   @id
  username        String    @unique
  fullName        String
  email           String   @unique
  bio             String?
  followerIds     String[]
  followingIds    String[]
  password        String
  createdAt       String
  createdOn       String
  profileImageUrl String

}

model PostMediaItem {
  postMediaId   String  @id
  postMediaType String
  postMediaURL  String
  postPostId    String
}

model Post {
  postUserId   String
  postId       String          @id
  postCaption  String
  postViews    String[]
  postLikes    String[]
  createdAt    String
  createdOn    String
}

model Comment {
  commentId      String   @id
  commentUserId  String
  commentLikes   String[]
  commentContent String
  commentPostId  String
}
